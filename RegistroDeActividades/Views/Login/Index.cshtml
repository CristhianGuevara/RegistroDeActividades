  <script>

      // Función para generar un captcha aleatorio
      function generateCaptcha() {
          var captcha = "";
          var possibleChars = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789";

          for (var i = 0; i < 6; i++)
              captcha += possibleChars.charAt(Math.floor(Math.random() * possibleChars.length));

          return captcha;
      }

      // Función para mostrar el captcha en la página
      function displayCaptcha() {
          var captcha = generateCaptcha();
          document.getElementById("captchaImage").textContent = captcha;
      }

      // Mostrar el captcha al cargar la página
      displayCaptcha();

      // Refrescar el captcha al hacer clic en el botón
      document.getElementById("refreshCaptcha").addEventListener("click", function () {
          displayCaptcha();
      });
  </script>